
@model HomeVM
@{
    ViewData["Title"] = "Index";
}
<main>
    <!-- Start Category section -->
    <div id="category">
        <div class="category-menu container">
            <ul>
                @foreach (var categories in Model.Categories)
                {
                    <li><a href="#"><img src="~/./assets/Img/@categories.Image"><span>@categories.Name</span></a></li>
                }
            </ul>
        </div>
        <div class="hamburger-menu">
            <input id="menu-toggle" type="checkbox"/>
            <label class='menu-button-container' for="menu-toggle">
                <div class='menu-button'></div>
            </label>
            <ul class="menu">
                @foreach (var categories in Model.Categories)
                {
                    <li><a href="#"><img src="~/./assets/Img/@categories.Image"><span>@categories.Name</span></a></li>
                }
            </ul>
        </div>
        <!-- End Category section -->

    </div>
    <!-- Start slider section -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2" class="active"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active first-slider">
                <img class="d-block w-100" src="~/./assets/Img/coffee-1572741_960_720.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/./assets/Img/coffee-1572739_960_720.png"  alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/./assets/Img/coffee-1572738_960_720.png"  alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- End slider section -->
    <!-- Start Discount section -->
    <section id="discounts">
        <div class="opportunities container">
            <div class="row">
                @foreach (var discounts in Model.Discounts)
                {
                    <div class="discount col-md-6">
                        <img src="~/./assets/Img/@discounts.Image">
                        <div class="description">
                            <i class="fa-solid fa-gift"></i>
                            <h2>@discounts.Discdescription</h2>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- End Discount section -->
    <!-- Start Menu section -->
    <section id="menu">
        <div class="fullmenu">
            <div class="menu-title">
                <h1>Despina Coffee</h1>
                <h2>Menu</h2>
            </div>
            <div class="container">
                <div class="inner-menu row" data-aos="fade-up">
                    @foreach (var menu in Model.MenuProducts)
                    {
                    <div class="item col-md-6">
                        <div class="item-image">
                            <img src="~/./assets/Img/@menu.ProductImage">
                        </div>
                        <div class="item-description">
                            <div class="title">
                                <h5>@menu.ProductName</h5>
                                <span>$@menu.ProductPrice.ToString("0.00")</span>
                            </div>
                            <div class="inner-coffee">
                                <p>@menu.ProductDescription</p>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
            <div class="fullmenu-button">
                <button class="fullmenu-btn">
                    <a href="menu.html">Explore Full Menu</a>
                </button>
            </div>
        </div>

    </section>
    <!-- End Menu section -->
    <!-- Start Shop section -->
    <section id="shop">
        <div class="shop container">
            <div class="shop-title">
                <h2>Despina shop</h2>
                <h4>Life is better with coffee</h4>
            </div>
            <div class="slick-slider" data-aos="fade-right">
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-1-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-2-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-3-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-4-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-5-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-6-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-7-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-8-263x241.png">
                    </a>
                </div>
                <div class="shop-slide col-12">
                    <a href="#">
                        <img src="~/./assets/Img/product-9-263x241.png">
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- End Shop section -->
    <!-- Start Blog section -->
    <section id="blog">
        <div class="blogs">
            <div class="container allblogs">
                <div class="blog-title">
                    <h2>Our blogs</h2>
                </div>
                <div class="slick-blog" data-aos="fade-up">
                    @foreach (var item in Model.Blogs)
                    {
                        <div class="blog-info col-11">
                            <div class="blog-image col-md-12">
                                <a href="Post-Roast.html">
                                    <img src="~/./assets/Img/@item.Image ">
                                </a>
                            </div>
                            <div class="blog-description col-md-12">
                                <span><i class="fa-regular fa-user"></i>@item.Author</span>
                                <p>@item.Date</p>
                                <p><a href="/Post-Roast.html">@item.Title</a></p>
                                <p>
                                    @item.Description
                                </p>
                                <p><a href="/Blog/Details/@item.Id" >Read more <i class="fa-solid fa-arrow-right"></i></a></p>
                                @*<a asp-controller="BlogController" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-inverse btn-outline-inverse"><i class="fas fa-eye"></i></a>
                                 <input id="docActionId" asp-for="@item.Id" type="hidden" value="initialValue" />*@
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- End Blog section -->
    <!-- Start Future section -->
    <section id="future">
        <div class="future">
            <div class="container">
                <div class="somefuture">
                    <h2>Our Some Future</h2>
                    <p>
                        The role of a good cook ware in the preparation of a sumptuous cannot be <br>over
                        emphasized then one consider white bread
                    </p>
                </div>
                <div class="allfutures row" data-aos="fade-up">
                    @foreach (var futures in Model.Futures)
                    {
                        <div class="future-description col-lg-3">
                            <div class="future-title">
                                <img src="~/./assets/Img/@futures.Image">
                                <h2>@futures.Title</h2>
                            </div>
                            <div class="future-content">
                                <p>
                                    @futures.Description
                                </p>
                            </div>
                        </div>
                     }
                </div>
            </div>
        </div>
    </section>
    <!-- End Future section -->
    <!-- Start social-media section -->
